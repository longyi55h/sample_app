<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
    <h1>aaa</h1>
    <div class="col-md-8">
        <% if @user.microposts.any? %>
        <h1>bbb</h1>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
        <% end %>
    </div>
</div>
